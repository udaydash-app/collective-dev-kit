{
  "appId": "com.globalmarket.pos",
  "productName": "Global Market POS",
  "directories": {
    "output": "release",
    "buildResources": "public"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/icon-*.png",
    "public/favicon.png"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icon-512x512.png",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Global Market POS"
  },
  "portable": {
    "artifactName": "${productName}-${version}-Portable.${ext}"
  },
  "extraMetadata": {
    "main": "electron/main.cjs"
  }
}
