{
  "appId": "com.globalmarket.pos",
  "productName": "Global Market POS",
  "asarUnpack": [
    "node_modules/@huggingface/**/*",
    "node_modules/@emnapi/**/*"
  ],
  "directories": {
    "output": "release",
    "buildResources": "public"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/icon-*.png",
    "public/favicon.png"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "publisherName": "Global Market"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Global Market POS",
    "allowElevation": true
  },
  "portable": {
    "artifactName": "${productName}-${version}-Portable.${ext}"
  },
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "publish": {
    "provider": "github",
    "owner": "udaydash-app",
    "repo": "collective-dev-kit"
  }
}