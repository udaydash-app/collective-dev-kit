{
  "appId": "com.globalmarket.pos",
  "productName": "Global Market POS",
  "asarUnpack": [
    "node_modules/@huggingface/**/*",
    "node_modules/@emnapi/**/*"
  ],
  "directories": {
    "output": "release",
    "buildResources": "public"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/icon-*.png",
    "public/favicon.png"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64", "x64"]
      },
      {
        "target": "zip",
        "arch": ["arm64", "x64"]
      }
    ],
    "category": "public.app-category.business",
    "icon": "public/icon-512x512.png",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "title": "${productName} ${version}",
    "icon": "public/icon-512x512.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Global Market POS",
    "allowElevation": true
  },
  "portable": {
    "artifactName": "${productName}-${version}-Portable.${ext}"
  },
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "publish": {
    "provider": "github",
    "owner": "udaydash-app",
    "repo": "collective-dev-kit"
  }
}